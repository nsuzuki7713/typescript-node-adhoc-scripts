    "@types/lodash": "^4.14.175",
    "@types/uuid": "^8.3.0",
    "aws-sdk": "^2.999.0",
    "axios": "^0.22.0",
    "dotenv": "^10.0.0",
    "iconv-lite": "^0.6.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "node-html-parser": "^4.1.5",
    "source-map-support": "^0.5.19",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "yup": "^0.32.9",
    "zx": "^7.0.2"
  }
}
